<?xml version="1.0" encoding="UTF-8"?>
<project name="module_shapes" default="compile.module.shapes">
  <dirname property="module.shapes.basedir" file="${ant.file.module_shapes}"/>
  
  <property name="module.jdk.home.shapes" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.shapes" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.shapes" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.shapes" value="${compiler.args}"/>
  
  <property name="shapes.output.dir" value="${module.shapes.basedir}/../out/production/shapes"/>
  <property name="shapes.testoutput.dir" value="${module.shapes.basedir}/../out/test/shapes"/>
  
  <path id="shapes.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="shapes.module.production.classpath">
    <path refid="${module.jdk.classpath.shapes}"/>
  </path>
  
  <path id="shapes.runtime.production.module.classpath">
    <pathelement location="${shapes.output.dir}"/>
  </path>
  
  <path id="shapes.module.classpath">
    <path refid="${module.jdk.classpath.shapes}"/>
    <pathelement location="${shapes.output.dir}"/>
  </path>
  
  <path id="shapes.runtime.module.classpath">
    <pathelement location="${shapes.testoutput.dir}"/>
    <pathelement location="${shapes.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.shapes">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.shapes">
    <patternset refid="excluded.from.module.shapes"/>
  </patternset>
  
  
  <target name="compile.module.shapes" depends="compile.module.shapes.production,compile.module.shapes.tests" description="Compile module shapes"/>
  
  <target name="compile.module.shapes.production" description="Compile module shapes; production classes"/>
  
  <target name="compile.module.shapes.tests" depends="compile.module.shapes.production" description="compile module shapes; test classes" unless="skip.tests"/>
  
  <target name="clean.module.shapes" description="cleanup module">
    <delete dir="${shapes.output.dir}"/>
    <delete dir="${shapes.testoutput.dir}"/>
  </target>
</project>